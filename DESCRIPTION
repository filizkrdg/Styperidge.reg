Package: Styperidge.reg
Type: Package
Title: S-Type ridge regression
Version: 0.1.0
Authors@R: c(
 person("Filiz", "Karadag", email = "filiz.karadag@ege.edu.tr", role = c("cre"),
           comment = c(ORCID = "0000-0002-0116-7772")),    
